<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vista.crud.AlumnoCrudFormularioActivity"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/idCrudTituloAlumno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:text="Registro de Alumno"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:text="Nombre:"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/txtCrudNombre"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="10dp"
                android:drawableLeft="@drawable/baseline_person_24"
                android:ems="10"
                android:inputType="text"
                android:hint="Nombres"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:text="Apellido:"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="normal" />
            <EditText
                android:id="@+id/txtCrudApellido"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="10dp"
                android:drawableLeft="@drawable/baseline_person_24"
                android:ems="10"
                android:inputType="text"
                android:hint="Apellidos"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:text="Teléfono:"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/txtCrudTelefono"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:drawableLeft="@drawable/baseline_location_on_24"
                android:padding="10dp"
                android:ems="10"
                android:inputType="text"
                android:hint="Teléfono"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:text="Dni:"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/txtCrudDni"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="10dp"
                android:drawableLeft="@drawable/baseline_numbers_24"
                android:ems="10"
                android:inputType="text"
                android:hint="Dni"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:text="Correo:"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/txtCrudCorreo"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="10dp"
                android:drawableLeft="@drawable/baseline_numbers_24"
                android:ems="10"
                android:inputType="text"
                android:hint="Correo"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:text="Dirección:"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/txtCrudDireccion"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="10dp"
                android:drawableLeft="@drawable/baseline_numbers_24"
                android:ems="10"
                android:inputType="text"
                android:hint="Dirección"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:text="Fecha de Nacimiento:"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/txtCrudFechaNacimiento"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="10dp"
                android:drawableLeft="@drawable/baseline_calendar_month_24"
                android:ems="10"
                android:inputType="text"
                android:hint="Fecha de nacimiento"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:text="Estado:"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/txtCrudEstado"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="10dp"
                android:drawableLeft="@drawable/baseline_numbers_24"
                android:ems="10"
                android:inputType="text"
                android:hint="Estado"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:text="País:"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="normal" />

            <Spinner
                android:id="@+id/spnCrudAlumnoPais"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="10dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:text="Modalidad:"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="normal" />

            <Spinner
                android:id="@+id/spnCrudAlumnoModalidad"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="10dp"/>

            <Button
                android:id="@+id/btnCrudRegistrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="REGISTRAR"/>

            <Button
                android:id="@+id/btnCrudRegresar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="REGRESAR"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>