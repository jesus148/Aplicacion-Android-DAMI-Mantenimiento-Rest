<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="5dp"
    >
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="7"
        >
        <TextView
            android:id="@+id/txtCrudAlumnoItemId"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/txtCrudAlumnoItemNombre"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/txtCrudAlumnoItemApellido"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/txtCrudAlumnoItemTelefono"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/txtCrudAlumnoItemDni"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/txtCrudAlumnoItemCorreo"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/txtCrudAlumnoItemDireccion"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/txtCrudAlumnoItemFecNac"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/txtCrudAlumnoItemPais"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/txtCrudAlumnoItemModalidad"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_weight="1"/>
    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.cardview.widget.CardView>