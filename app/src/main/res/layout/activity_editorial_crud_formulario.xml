<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vista.crud.EditorialCrudFormularioActivity"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/idCrudTituloEditorial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:text="Registra Editorial"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:text="Nombre:"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/txtCrudNombre"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="10dp"
                android:drawableLeft="@drawable/baseline_person_24"
                android:ems="10"
                android:inputType="text"
                android:hint="Nombres"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:text="Dirección:"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/txtCrudDireccion"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:drawableLeft="@drawable/baseline_location_on_24"
                android:padding="10dp"
                android:ems="10"
                android:inputType="text"
                android:hint="Dirección"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:text="Ruc:"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/txtCrudRuc"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="10dp"
                android:drawableLeft="@drawable/baseline_numbers_24"
                android:ems="10"
                android:inputType="text"
                android:hint="Ruc"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:text="Fecha de creación:"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/txtCrudFechaCreación"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="10dp"
                android:drawableLeft="@drawable/baseline_calendar_month_24"
                android:ems="10"
                android:inputType="text"
                android:hint="Fecha de creación"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:text="País:"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="normal" />

            <Spinner
                android:id="@+id/spnCrudEditorialPais"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="10dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:text="Categoría:"
                android:textAlignment="center"
                android:textSize="12sp"
                android:textStyle="normal" />

            <Spinner
                android:id="@+id/spnCrudEditorialCategoria"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="10dp"/>

            <Button
                android:id="@+id/btnCrudRegistrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="REGISTRAR"/>

            <Button
                android:id="@+id/btnCrudRegresar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="REGRESAR"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>