<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vista.crud.AutorCrudFormularioActivity"
    android:orientation="vertical"
    android:layout_margin="10dp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/idCrudTituloAutor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:text="Registra Autor"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtCrudNombre"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="10dp"
                android:drawableLeft="@drawable/baseline_person_24"
                android:ems="10"
                android:inputType="text"
                android:hint="Nombre"/>

            <EditText
                android:id="@+id/txtCrudApellido"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="10dp"
                android:drawableLeft="@drawable/baseline_person_24"
                android:ems="10"
                android:inputType="text"
                android:hint="Apellido"/>


            <EditText
                android:id="@+id/txtCrudCorreo"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:ems="10"
                android:drawableLeft="@drawable/baseline_email_24"
                android:hint="Correo"
                android:inputType="text"
                android:padding="10dp" />


            <EditText
                android:id="@+id/txtCrudFechaNaci"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="10dp"
                android:drawableLeft="@drawable/baseline_calendar_month_24"
                android:ems="10"
                android:inputType="text"
                android:hint="Fecha de Nacimiento"/>

            <EditText
                android:id="@+id/txtCrudTelefono"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="10dp"
                android:drawableLeft="@drawable/baseline_numbers_24"
                android:ems="10"
                android:inputType="text"
                android:hint="Teléfono"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="País:"
                android:textSize="18sp"
                android:textStyle="normal" />

            <Spinner
                android:id="@+id/spnCrudAutorCargo"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="10dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Categoría:"
                android:textSize="18sp"
                android:textStyle="normal" />

            <Spinner
                android:id="@+id/spnCrudAutorPais"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="10dp"/>

            <Button
                android:id="@+id/btnCrudRegistrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="REGISTRAR"/>

            <Button
                android:id="@+id/btnCrudRegresar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="REGRESAR"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>